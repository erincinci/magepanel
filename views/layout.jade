doctype html
html
    head
        title= title
        meta(charset='utf-8')
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css')
        link(rel='stylesheet', href='/stylesheets/magepanel.css')

    body(role='document')
        // App Menu
        .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/') MagePanel
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li(class=(menu === 'home' ? 'active' : ''))
                            a(href='/') Home
                        li(class=(menu === 'mage' ? 'active' : ''))
                            a(href='/mage') Version
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown')
                                | Tools
                                span.caret
                            ul.dropdown-menu(role='menu')
                                li
                                    a(href='/log', target='_blank') Logs
                                li.divider
                                li.dropdown-header Nav header
                                li
                                    a(href='#') Separated link
                                li
                                    a(href='#') One more separated link

        // Main div
        .container.theme-showcase(role='main')
            // Page Content
            block content

        // Ajax Loading Panel
        #wait(style='display: none; width: 69px; height: 89px; border: 0px solid black; position: absolute; top: 50%; left: 50%; padding: 2px;')
            img(src='/images/ajax-loader.gif', width='64', height='64')
            br
            | Loading..

        // Import JQuery Script
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
        // Import Bootstrap Script
        script(src='/javascripts/bootstrap.min.js')
        // Import our global javascript
        script(src='/javascripts/global.js')