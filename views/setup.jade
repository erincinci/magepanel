extends layout

block content
    .page-header
        h1.icon.ion-settings= title

    form#saveSettings(method='POST', action='/setup/save')
        if winEnv
            .panel.panel-default
                .panel-heading
                    h3.panel-title Windows Environment Setup
                .panel-body
                    .input-group
                        span.input-group-addon
                            i.icon.ion-social-windows  Cygwin bin directory
                        input.form-control(name='cygwinBin', type='text', value='C:\\cygwin\\bin', placeholder='cygwin bin folder')

        .panel.panel-default
            .panel-heading
                h3.panel-title Magallanes Setup
            .panel-body
                .input-group
                    span.input-group-addon
                        i.icon.ion-android-send  Default deploy method
                    select.selectpicker(name='mageDeployStrategy', data-width='auto')
                        option(value='rsync') RSync
                        option(value='targz') TarGZ
                        option(value='git-rebase') GIT Rebase
                        option(value='disabled') None

        button.btn.btn-default.btn-success.glyphicon.glyphicon-save(type='submit', style='float:right;') Save