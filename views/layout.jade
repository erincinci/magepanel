doctype html
html
    head
        title= title + " | MagePanel"
        meta(charset='utf-8')
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css')
        link(rel='stylesheet', href='/stylesheets/magepanel.css')
        link(rel='stylesheet', href='/stylesheets/ionicons.css')

    body(role='document')
        // App Menu
        .navbar.navbar-default.navbar-fixed-top(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/')
                        b MagePanel
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li(class=(menu === 'home' ? 'active' : ''))
                            a.icon.ion-home(href='/') Home
                        li(class=(menu === 'mage' ? 'active' : ''))
                            a.icon.ion-code(href='/mage') Console
                        li.dropdown
                            a.icon.ion-wrench.dropdown-toggle(href='#', data-toggle='dropdown')
                                | Tools
                                span.caret
                            ul.dropdown-menu(role='menu')
                                li
                                    a.icon.ion-document-text(href='/log', target='_blank') Logs
                                li
                                    a.icon.ion-settings(href='/setup') Application Setup

        // Main div
        .container.theme-showcase(role='main')
            // Page Content
            block content

        // Ajax Loading Panel
        #overlay
        #wait
            table
                tr
                    td(align='center')
                        img(src='/images/ajax-loader.gif', width='31', height='31')
                tr
                    td(align='center')
                        font(color='#97e1f6') Loading...

        // Import JQuery Script
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
        // Import Bootstrap Script
        script(src='/javascripts/bootstrap.min.js')
        // Import our global javascript
        script(src='/javascripts/global.js')