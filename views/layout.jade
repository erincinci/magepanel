doctype html
html
    head
        title MagePanel | #{title}
        meta(charset='utf-8')
        // Twitter Bootstrap
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap-theme.css')
        link(rel='stylesheet', href='/stylesheets/bootstrap-select.css')
        // MagePanel Styles
        link(rel='stylesheet', href='/stylesheets/magepanel.css')
        // IonIcons
        link(rel='stylesheet', href='/stylesheets/ionicons.css')
        // Toastr Notifications
        link(rel='stylesheet', href='/stylesheets/toastr.min.css')
        // CodeMirror Editor
        link(rel='stylesheet', href='/codemirror-4.4/lib/codemirror.css')
        link(rel='stylesheet', href='/codemirror-4.4/theme/mdn-like.css')

    body(role='document')
        // Background image
        img#bg(src='/images/background.png' alt='')

        // App Menu
        .navbar.navbar-default.navbar-fixed-top(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#')
                        b.icon.ion-magepanel  MagePanel
                .navbar-collapse.collapse
                    if setupCompleted
                        ul.nav.navbar-nav
                            li(class=(menu === 'home' ? 'active' : ''))
                                a.icon.ion-home(href='/')  Home
                            li(class=(menu === 'mage' ? 'active' : ''))
                                a.icon.ion-code(href='/mage')  Console
                            li(class=(menu === 'projects' ? 'active' : ''))
                                a.icon.ion-briefcase(href='/projects')  Projects
                            li.dropdown
                                a.icon.ion-wrench.dropdown-toggle(href='#', data-toggle='dropdown')
                                    |  Tools
                                    span.caret
                                ul.dropdown-menu(role='menu')
                                    li
                                        a.icon.ion-document-text(href='/log', target='_blank')  Logs
                                    li
                                        a.icon.ion-settings(href='/setup')  Application Setup
                    ul.nav.navbar-nav(style='float:right;')
                        li
                            a.icon.ion-person(href='#')= username

        // Main div
        .container.main-container(role='main')
            // Page Content
            block content

        // Ajax Loading Panel
        #overlay
        #wait
            table
                tr
                    td(align='center')
                        img(src='/images/ajax-loader.gif', width='31', height='31')
                tr
                    td(align='center')
                        font(color='#97e1f6') Loading...

        // Footer
        //#footer.container
        //.navbar.navbar-default.navbar-fixed-bottom(role='footer')
            //.container
                //p.text-muted MagePanel Projects

        // jQuery
        script(src='/javascripts/jquery.min.js')
        // Twitter Bootstrap
        script(src='/javascripts/bootstrap.min.js')
        script(src='/javascripts/bootstrap-select.min.js')
        // Toastr Notifications
        script(src='/javascripts/toastr.min.js')
        // CodeMirror Editor
        script(src='/codemirror-4.4/lib/codemirror.js')
        script(src='/codemirror-4.4/mode/yaml/yaml.js')
        script(src='/codemirror-4.4/addon/selection/active-line.js')
        // MagePanel Scripts
        script(src='/javascripts/global.js')